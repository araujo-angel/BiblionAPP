<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Biblion"
        tools:targetApi="31">
        <activity
            android:name=".Activity.Login.LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.Biblion" />
        <activity
            android:name=".Splash.SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.Biblion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Cart.CartActivity"
            android:exported="false"
            android:label="CartActivity"
            android:theme="@style/Theme.Biblion" />
        <activity
            android:name=".Activity.DetailEachBook.DetailEachBookActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ItemsList.ItemsListActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Dashboard.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Biblion">
        </activity>
        <activity
            android:name=".Activity.Dashboard.FavoritesActivity"
            android:exported="false"
            android:label="Favoritos"
            android:theme="@style/Theme.Biblion" />
    </application>

</manifest>
